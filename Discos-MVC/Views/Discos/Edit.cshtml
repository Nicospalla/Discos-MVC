 @model dominio.Disco

@{
    ViewData["Title"] = "Editar disco";
}

<h1>Editar disco</h1>

<h4>Disco</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaLanzamiento" class="control-label"></label>
                <input asp-for="FechaLanzamiento" class="form-control" type="date"/>
                <span asp-validation-for="FechaLanzamiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadCanciones" class="control-label"></label>
                <input asp-for="CantidadCanciones" class="form-control" />
                <span asp-validation-for="CantidadCanciones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Estilo</label>
                <select class="form-select" asp-for="Estilo.Id" asp-items="ViewBag.estilos"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Edición</label>
                <select class="form-select" asp-for="TipoEdicion.Id" asp-items="ViewBag.edicion"></select>
            </div>
            <div class="form-group">
                <label asp-for="UrlTapa" class="control-label"></label>
                <input asp-for="UrlTapa" required class="form-control" />
                <span asp-validation-for="UrlTapa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
